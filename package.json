{
  "name": "histofy-cli",
  "version": "3.0.0",
  "description": "Enhanced Git history management with custom date commits, performance optimization, and comprehensive tooling",
  "main": "src/index.js",
  "bin": {
    "histofy": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "npm run lint && npm run test",
    "prepack": "npm run build",
    "install:shell": "bash shell/install.sh",
    "install:powershell": "powershell -ExecutionPolicy Bypass -File shell/install.ps1",
    "verify": "node installers/verify.js",
    "health-check": "bash installers/health-check.sh",
    "health-check:windows": "powershell -File installers/health-check.ps1"
  },
  "keywords": [
    "git",
    "history",
    "commit",
    "date",
    "cli",
    "version-control",
    "developer-tools",
    "git-tools",
    "commit-management",
    "git-history"
  ],
  "author": "Ishaq <ishaq2321@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/histofy-v3.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/histofy-v3/issues"
  },
  "homepage": "https://github.com/your-username/histofy-v3#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "inquirer": "^8.2.5",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.7",
    "ora": "^5.4.1",
    "cli-progress": "^3.12.0",
    "crypto-js": "^4.1.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "fast-csv": "^4.3.6",
    "moment": "^2.29.4",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "eslint": "^8.28.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.2.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "files": [
    "src/",
    "shell/",
    "installers/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}