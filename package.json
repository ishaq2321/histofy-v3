{
  "name": "histofy-cli",
  "version": "3.0.0",
  "description": "Terminal-based GitHub history manipulation tool with custom commit dates",
  "main": "src/index.js",
  "bin": {
    "histofy": "./bin/histofy"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "build": "pkg . --out-path dist/",
